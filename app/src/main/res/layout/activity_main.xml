<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#1C1C1C"
    android:padding="16dp">

    <!-- Ekran -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="end|bottom"
        android:padding="16dp">

        <TextView
            android:id="@+id/display"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="48sp"
            android:textColor="#FFFFFF"
            android:gravity="end"
            android:maxLines="2" />

        <TextView
            android:id="@+id/resultDisplay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="32sp"
            android:textColor="#888888"
            android:gravity="end" />
    </LinearLayout>

    <!-- Butonlar -->
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="4"
        android:rowCount="5"
        android:useDefaultMargins="true">

        <!-- Satır 1 -->
        <Button android:id="@+id/btnClear" android:text="C" style="@style/CalcButton.Function" />
        <Button android:id="@+id/btnBackspace" android:text="⌫" style="@style/CalcButton.Function" />
        <Button android:text="%" style="@style/CalcButton.Function" android:enabled="false" />
        <Button android:id="@+id/btnDivide" android:text="÷" style="@style/CalcButton.Operator" />

        <!-- Satır 2 -->
        <Button android:id="@+id/btn7" android:text="7" style="@style/CalcButton" />
        <Button android:id="@+id/btn8" android:text="8" style="@style/CalcButton" />
        <Button android:id="@+id/btn9" android:text="9" style="@style/CalcButton" />
        <Button android:id="@+id/btnMultiply" android:text="×" style="@style/CalcButton.Operator" />

        <!-- Satır 3 -->
        <Button android:id="@+id/btn4" android:text="4" style="@style/CalcButton" />
        <Button android:id="@+id/btn5" android:text="5" style="@style/CalcButton" />
        <Button android:id="@+id/btn6" android:text="6" style="@style/CalcButton" />
        <Button android:id="@+id/btnMinus" android:text="-" style="@style/CalcButton.Operator" />

        <!-- Satır 4 -->
        <Button android:id="@+id/btn1" android:text="1" style="@style/CalcButton" />
        <Button android:id="@+id/btn2" android:text="2" style="@style/CalcButton" />
        <Button android:id="@+id/btn3" android:text="3" style="@style/CalcButton" />
        <Button android:id="@+id/btnPlus" android:text="+" style="@style/CalcButton.Operator" />

        <!-- Satır 5 -->
        <Button android:id="@+id/btn0" android:text="0" style="@style/CalcButton" />
        <Button android:id="@+id/btnDot" android:text="." style="@style/CalcButton" />
        <Button android:text="" style="@style/CalcButton" android:enabled="false" android:visibility="invisible" />
        <Button android:id="@+id/btnEquals" android:text="=" style="@style/CalcButton.Equals" />

    </GridLayout>

</LinearLayout>
