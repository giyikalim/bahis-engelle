<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1C1C1C">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Logo/Icon -->
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_calculator"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="16dp" />

        <!-- Başlık -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Koruma Kaydı"
            android:textSize="24sp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Korumayı aktifleştirmek için bilgilerinizi girin"
            android:textSize="14sp"
            android:textColor="#888888"
            android:gravity="center"
            android:layout_marginBottom="32dp" />

        <!-- Form Kartı -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#2C2C2C"
            android:padding="20dp">

            <!-- Ad -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ad *"
                android:textColor="#AAAAAA"
                android:textSize="12sp"
                android:layout_marginBottom="4dp" />

            <EditText
                android:id="@+id/etFirstName"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="#3C3C3C"
                android:textColor="#FFFFFF"
                android:textColorHint="#666666"
                android:hint="Adınız"
                android:inputType="textPersonName"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:layout_marginBottom="16dp" />

            <!-- Soyad -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Soyad *"
                android:textColor="#AAAAAA"
                android:textSize="12sp"
                android:layout_marginBottom="4dp" />

            <EditText
                android:id="@+id/etLastName"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="#3C3C3C"
                android:textColor="#FFFFFF"
                android:textColorHint="#666666"
                android:hint="Soyadınız"
                android:inputType="textPersonName"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:layout_marginBottom="16dp" />

            <!-- Email -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email *"
                android:textColor="#AAAAAA"
                android:textSize="12sp"
                android:layout_marginBottom="4dp" />

            <EditText
                android:id="@+id/etEmail"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="#3C3C3C"
                android:textColor="#FFFFFF"
                android:textColorHint="#666666"
                android:hint="email@example.com"
                android:inputType="textEmailAddress"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:layout_marginBottom="16dp" />

            <!-- Telefon (Opsiyonel) -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Telefon (Opsiyonel)"
                android:textColor="#AAAAAA"
                android:textSize="12sp"
                android:layout_marginBottom="4dp" />

            <EditText
                android:id="@+id/etPhone"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="#3C3C3C"
                android:textColor="#FFFFFF"
                android:textColorHint="#666666"
                android:hint="+90 555 123 4567"
                android:inputType="phone"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:layout_marginBottom="16dp" />

            <!-- Cihaz Adı (Opsiyonel) -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cihaz Adı (Opsiyonel)"
                android:textColor="#AAAAAA"
                android:textSize="12sp"
                android:layout_marginBottom="4dp" />

            <EditText
                android:id="@+id/etDeviceName"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="#3C3C3C"
                android:textColor="#FFFFFF"
                android:textColorHint="#666666"
                android:hint="Örn: Ali'nin Telefonu"
                android:inputType="text"
                android:paddingStart="12dp"
                android:paddingEnd="12dp" />

        </LinearLayout>

        <!-- Hata Mesajı -->
        <TextView
            android:id="@+id/tvError"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FF5555"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_marginTop="16dp"
            android:visibility="gone" />

        <!-- Loading -->
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:visibility="gone" />

        <!-- Kayıt Butonu -->
        <Button
            android:id="@+id/btnRegister"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Kaydet ve Korumayı Başlat"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            android:backgroundTint="#4CAF50"
            android:layout_marginTop="24dp" />

        <!-- Bilgi -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="* Bu bilgiler koruma sisteminin çalışması ve\nalert bildirimlerinin gönderilmesi için gereklidir."
            android:textColor="#666666"
            android:textSize="12sp"
            android:gravity="center"
            android:layout_marginTop="16dp" />

    </LinearLayout>

</ScrollView>
